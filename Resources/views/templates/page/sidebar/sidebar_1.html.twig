<div class="col-md-8 content">
    <div class="page">
        <h1>
            {{ page.title }}
        </h1>

        <p>
            {{ page.description|raw }}
        </p>
    </div>
</div>

<div class="col-md-4 sidebar">
    <div class="inner-sidebar">
        {% for pSidebar in page.sidebars %}
            {{ display_sidebar(pSidebar.sidebar, null, page) }}
        {% endfor %}
    </div>
</div>