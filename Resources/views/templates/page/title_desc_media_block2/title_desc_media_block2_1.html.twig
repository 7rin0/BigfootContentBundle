{% extends 'BigfootContentBundle:templates/page:layout.html.twig' %}

{% block page_content %}
    <article>
        <div class="mainContent">
            {% if page.media %}<img src="{{ page.media|media }}" />{% endif %}
            {% if page.title %}<h1>{{ page.title }}</h1>{% endif %}
            <div class="richText">
                {{ page.description|raw }}
            </div>
            <aside class="blocksHorizontal bottom">
                {% for pBlock in page.blocks %}
                    {{ display_block(pBlock) }}
                {% endfor %}
            </aside>
        </div>
        <aside class="aside blocksVertical right">
            {% for pBlock in page.blocks %}
                {{ display_block(pBlock) }}
            {% endfor %}
        </aside>
    </article>
{% endblock page_content %}
